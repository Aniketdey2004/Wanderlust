    <span class="badge bg-info bg-gradient me-2 mb-2">Mongoose</span>
    <span class="badge bg-dark bg-gradient me-2 mb-2">EJS</span>
    <span class="badge bg-warning text-dark bg-gradient me-2 mb-2">Bootstrap 5</span>
    <span class="badge bg-secondary bg-gradient me-2 mb-2">Cloudinary</span>
    <span class="badge bg-primary bg-gradient me-2 mb-2">Mapbox</span>
    <span class="badge bg-success bg-gradient me-2 mb-2">Razorpay</span>
    <span class="badge bg-secondary bg-gradient me-2 mb-2">Passport.js</span>
  </div>
</div>

