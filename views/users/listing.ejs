<%layout("/layouts/boilerplate.ejs")%>
<h2 class="mt-3">Your Listings</h2>
<%if(userListing.length>0){%>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
  <%for(listing of userListing){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top listing-img"
        alt="listing Image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body listing-card-body">
        <h5 class="card-title"><%=listing.title%></h5>
      </div>
    </div>
  </a>
  <%}%>
</div>
<%}%>
<%if(userListing.length==0){%>
  <h4>No Listings Added</h4>
<%}%>
