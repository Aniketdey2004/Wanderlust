<%layout("/layouts/boilerplate.ejs")%>
<h2 class="mt-3">Visitors to Your Listing</h2>
<%if(bookings.length>0){%>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
  <%for(booking of bookings){%>
  <div class="col mb-3">
    <div class="card book-card h-100">
      <img src="<%= booking.image %>" class="card-img-top book-img" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%=booking.title%></h5>
        <p class="card-text"><b>From:</b><%=booking.from.toLocaleDateString()%></p>
        <p class="card-text"><b>To:</b><%=booking.to.toLocaleDateString()%></p>
        <a href="/listings/<%=booking.id%>" class="btn seelisting me-2"
          >See Listing</a
        >
        <a href="/user/<%=booking.userid%>" class="btn visitor"
          >See Visitor</a
        >
      </div>
    </div>
  </div>
  <%}%>
</div>
<nav aria-label="Listings pagination">
  <ul class="pagination justify-content-center mt-4">
    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
      <a
        class="page-link"
        href="/user/customers?page=<%= currentPage - 1 %>"
        >Previous</a
      >
    </li>
    <% for(let i = 1; i <= totalPages; i++) { %>
    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
      <a
        class="page-link"
        href="/user/customers?page=<%= i %>"
        ><%= i %></a
      >
    </li>
    <% } %>
    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
      <a
        class="page-link"
        href="/user/customers?page=<%= currentPage + 1 %>"
        >Next</a
      >
    </li>
  </ul>
</nav>
<%}%> <%if(bookings.length==0){%>
<h4 class="text-muted">No Visitors yet</h4>
<%}%>
